<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
 
    <!-- Accent Colors -->
    <Color x:Key="SparkAccentBackgroundColor">#1060B0</Color>
    <Color x:Key="SparkAccentForegroundColor">#FFFFFF</Color>
    
    <!-- Window Colors -->
    <Color x:Key="SparkWindowBackgroundColor">#181818</Color>
    <Color x:Key="SparkWindowForegroundColor">#FFFFFF</Color>
    <Color x:Key="SparkWindowShadowColor">#000000</Color>
    
    <!-- Control Colors -->
    <Color x:Key="SparkControlBackgroundColor">#202020</Color>
    <Color x:Key="SparkControlForegroundColor">#FFFFFF</Color>
    <Color x:Key="SparkControlBorderColor">#404040</Color>
    <Color x:Key="SparkControlHoverBorderColor">#606060</Color>
    <Color x:Key="SparkControlDisabledBackgroundColor">#303030</Color>
    <Color x:Key="SparkControlDisabledForegroundColor">#808080</Color>
    <Color x:Key="SparkControlPressedBackgroundColor">#1060B0</Color>
    <Color x:Key="SparkControlPressedForegroundColor">#FFFFFF</Color>
    
    <!-- Separator Colors -->
    <Color x:Key="SparkSeparatorColor">#282828</Color>
    
    <!-- Text Colors -->
    <Color x:Key="SparkTextForegroundColor">#FFFFFF</Color>
    <Color x:Key="SparkSelectionColor">#1060B0</Color>
    
</ResourceDictionary>
    