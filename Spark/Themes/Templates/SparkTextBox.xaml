<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Text Box Template -->
    <ControlTemplate x:Key="SparkTextBoxTemplate" TargetType="{x:Type TextBox}">
        <Grid>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="{TemplateBinding Padding}">
                <ScrollViewer Name="PART_ContentHost"/>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource SparkTextBoxHoverBorderBrush}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
    <!-- Text Box Style -->
    <Style x:Key="SparkTextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template" Value="{StaticResource SparkTextBoxTemplate}"/>
        <Setter Property="FontFamily" Value="Segoe WP"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Background" Value="{DynamicResource SparkTextBoxBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource SparkTextBoxForeground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SparkTextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource SparkTextBoxSelectionBrush}"/>
        <Setter Property="SelectionOpacity" Value="0.3"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Padding" Value="2"/>
    </Style>
    
</ResourceDictionary>