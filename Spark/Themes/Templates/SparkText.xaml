<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base Text Style -->
    <Style x:Key="SparkTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Segoe WP"/>
        <Setter Property="FontSize" Value="{DynamicResource SparkTextFontSize}"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{DynamicResource SparkTextForeground}"/>
        <Setter Property="Margin" Value="8,4"/>
    </Style>

    <!-- Window Title Text Style -->
    <Style x:Key="SparkWindowTitleStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource SparkTextBlockStyle}">
        <Setter Property="FontSize" Value="{DynamicResource SparkWindowTitleFontSize}"/>
        <Setter Property="Foreground" Value="{DynamicResource SparkWindowTitleForeground}"/>
        <Setter Property="Margin" Value="12,0,8,4"/>
    </Style>

</ResourceDictionary>
    